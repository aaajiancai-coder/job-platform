<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.job.mapper.ResumeMapper">
    <select id="selectByStudentId" resultType="com.job.entity.Resume">
        SELECT * FROM resumes WHERE student_id = #{studentId}
    </select>
    <select id="selectByStudentIdPaged" resultType="com.job.entity.Resume">
        SELECT * FROM resumes WHERE student_id = #{studentId} ORDER BY updated_at DESC LIMIT #{offset}, #{pageSize}
    </select>
    <select id="countByStudentId" resultType="int">
        SELECT COUNT(*) FROM resumes WHERE student_id = #{studentId}
    </select>
    <select id="countByDate" resultType="int">
        SELECT COUNT(*) FROM resumes WHERE DATE(created_at) = #{date}
    </select>
</mapper>